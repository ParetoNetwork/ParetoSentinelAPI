          "rank": {
            "type": "integer",
            "format": "int64"
          },
          "score": {
            "type": "integer",
            "format": "int32"
          },
          "block": {
            "type": "integer",
            "format": "int64"
          },
          "bonus": {
            "type": "integer",
            "format": "int64"
          },
          "tokens": {
            "type": "string"
          }
        }
      },
      "UserInfo": {
        "type": "object",
        "properties": {
